<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/bg_dialog_top"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_top_yellow"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thêm / Sửa báo cáo"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Ngày báo cáo: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_data"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_time"
            android:padding="6dp"
            android:text="Thời gian xử lý: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_process"
            android:padding="6dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:text="Từ: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_process"
            android:layout_toRightOf="@id/from"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/from"
            android:padding="6dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:text="Đến: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_from"
            android:layout_toRightOf="@id/to"
            android:padding="6dp"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/to"
            android:layout_marginTop="20dp"
            android:hint="Nội dung báo cáo"
            android:padding="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tien_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input"
            android:padding="6dp"
            android:text="Tiến độ xử lý: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_tien_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input"
            android:layout_toRightOf="@id/tien_do"
            android:padding="6dp"
            android:textSize="16sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Submit" />


    </RelativeLayout>

</LinearLayout>