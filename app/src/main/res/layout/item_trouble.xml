<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name_trouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouble"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name_trouble"
        android:layout_marginTop="10dp"
        android:text="Level: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_value_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_level"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/text_level"
        android:text="Name trouble"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_date_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/text_level"
        android:text="Date"
        android:textSize="20sp" />

</RelativeLayout>